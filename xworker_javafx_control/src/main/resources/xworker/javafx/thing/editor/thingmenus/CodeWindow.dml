<?xml version="1.0" encoding="utf-8"?>

<Stage name="stage" descriptors="xworker.javafx.stage.Stage" label="CodeWindow" title="lang:d=代码&amp;en=Code"
     modality="APPLICATION_MODAL" resizable="true">
    <Nodes>
        <VBox name="rootVBox" fillWidth="true">
            <TextArea name="codeTextArea">
                <VBoxConstraints name="VBoxConstraints" vgrow="ALWAYS"></VBoxConstraints>
            </TextArea>
            <ButtonBar name="buttonBar">
                <Button name="closeButton" text="lang:d=关闭&amp;en=Close" cancelButton="true"
                     defaultButton="true">
                    <ButtonBaseEventHandler name="onAction">
                        <JavaAction name="close" _xmeta_id_="init" outerClassName="xworker.javafx.thing.editor.thingmenus.CodeWindow"
                             methodName="close"></JavaAction>
                    </ButtonBaseEventHandler>
                </Button>
            </ButtonBar>
            <RunAction>
                <JavaAction name="init" outerClassName="xworker.javafx.thing.editor.thingmenus.CodeWindow"
                     methodName="init"></JavaAction>
            </RunAction>
        </VBox>
    </Nodes>
    <Scene name="Scene" root="var:rootVBox"></Scene>
</Stage>