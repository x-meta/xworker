<?xml version="1.0" encoding="utf-8"?>

<Stage name="DirectoryChooserExample" descriptors="xworker.javafx.stage.Stage">
    <Nodes>
        <HBox name="rootNode" _xmeta_id_="HBox">
            <Button text="DirectoryChooser">
                <ButtonBaseEventHandler name="onAction" type="onAction">
                    <ShowDirectoryChooser descriptors="xworker.javafx.JavaFXActions/@ShowDirectoryChooser">
                        <actions>
                            <GroovyAction name="onResult" descriptors="xworker.lang.actions.GroovyAction"
                                 code="println result;"></GroovyAction>
                        </actions>
                    </ShowDirectoryChooser>
                </ButtonBaseEventHandler>
            </Button>
        </HBox>
    </Nodes>
    <Scene name="Scene" root="var:rootNode"></Scene>
</Stage>