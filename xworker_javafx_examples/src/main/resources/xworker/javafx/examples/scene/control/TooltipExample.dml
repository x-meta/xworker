<?xml version="1.0" encoding="utf-8"?>

<Stage name="TooltipExample" descriptors="xworker.javafx.stage.Stage">
    <Nodes>
        <HBox name="rootNode" _xmeta_id_="HBox">
            <Button text="Tooltip">
                <Tooltip graphicTextGap="5" text="Hello World">
                    <Font name="Font" size="16"></Font>
                    <Graphic>
                        <Rectangle height="20" width="20" x="0" y="0">
                            <Fill>
                                <Color name="Color" color="DEEPPINK"></Color>
                            </Fill>
                        </Rectangle>
                    </Graphic>
                </Tooltip>
            </Button>
        </HBox>
    </Nodes>
    <Scene name="Scene" root="var:rootNode"></Scene>
</Stage>