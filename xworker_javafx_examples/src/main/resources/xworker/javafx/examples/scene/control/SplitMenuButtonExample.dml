<?xml version="1.0" encoding="utf-8"?>

<Stage name="SplitMenuButtonExample" descriptors="xworker.javafx.stage.Stage" title="SplitMenuButtonExample">
    <Nodes>
        <HBox name="rootNode" _xmeta_id_="HBox">
            <SplitMenuButton text="Split Menu Button">
                <MenuItem text="Option1">
                    <Graphic>
                        <ImageView name="icon" _xmeta_id_="ImageView" image="com\sun\javafx\scene\control\skin\modena\HTMLEditor-Bold.png"></ImageView>
                    </Graphic>
                    <MenuItemEventHandler name="MenuItemEventHandler" type="onAction" ref="xworker.javafx.examples.scene.control.SplitMenuButtonExample/@Nodes/@HBox/@SplitMenuButton/@ButtonBaseEventHandler"></MenuItemEventHandler>
                </MenuItem>
                <MenuItem _xmeta_id_="MenuItem1" text="Option 2">
                    <Graphic>
                        <ImageView name="icon" _xmeta_id_="ImageView" image="com\sun\javafx\scene\control\skin\modena\HTMLEditor-Bold.png"></ImageView>
                    </Graphic>
                    <MenuItemEventHandler name="MenuItemEventHandler" type="onAction" ref="xworker.javafx.examples.scene.control.SplitMenuButtonExample/@Nodes/@HBox/@SplitMenuButton/@ButtonBaseEventHandler"></MenuItemEventHandler>
                </MenuItem>
                <MenuItem _xmeta_id_="MenuItem2" text="Option 3">
                    <Graphic>
                        <ImageView name="icon" _xmeta_id_="ImageView" image="com\sun\javafx\scene\control\skin\modena\HTMLEditor-Bold.png"></ImageView>
                    </Graphic>
                    <MenuItemEventHandler name="MenuItemEventHandler" type="onAction" ref="xworker.javafx.examples.scene.control.SplitMenuButtonExample/@Nodes/@HBox/@SplitMenuButton/@ButtonBaseEventHandler"></MenuItemEventHandler>
                </MenuItem>
                <ButtonBaseEventHandler type="onAction">
                    <ShowDialog descriptors="xworker.javafx.JavaFXActions/@ShowDialog">
                        <Dialogs>
                            <Alert alertType="CONFIRMATION" title="Button Clicked!" headerText="ognl:event.getTarget().getText()"
                                 contentText="ognl:event.getTarget().getText()">
                                <ButtonType name="ButtonType" type="OK"></ButtonType>
                            </Alert>
                        </Dialogs>
                    </ShowDialog>
                </ButtonBaseEventHandler>
            </SplitMenuButton>
        </HBox>
    </Nodes>
    <Scene name="Scene" root="var:rootNode"></Scene>
</Stage>