<?xml version="1.0" encoding="utf-8"?>

<Stage name="HyperlinkExample" descriptors="xworker.javafx.stage.Stage">
    <Nodes>
        <HBox name="rootNode" _xmeta_id_="HBox">
            <Hyperlink name="link" text="Click me!">
                <ButtonBaseEventHandler type="onAction">
                    <GroovyAction name="GroovyAction" descriptors="xworker.lang.actions.GroovyAction"
                         code="link.setText(&quot;HyperLink clicked!&quot;);"></GroovyAction>
                </ButtonBaseEventHandler>
            </Hyperlink>
        </HBox>
    </Nodes>
    <Scene name="Scene" root="var:rootNode"></Scene>
</Stage>