          Scode=
#$@text#$@
def gthing = null; //自动选择的事物
if(things != null && things.size() == 1){
    //如果只有一个
    gthing = things.get(0);
}else{
    //如果有多个
    for(thing in things){
        if(thing.getBoolean("autoExecute")){
            gthing = thing;
            break;
        }
    }
}

if(gthing != null){
    actionContext.g().put("autoSelectedThing", gthing);
    
    //自动结束
    thingGuide.finishCurrentNode();
    //println("autoselectThing=" + gthing);
}
