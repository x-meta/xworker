<?xml version="1.0" encoding="utf-8"?>

<thing name="TextFlow" descriptors="xworker.lang.MetaDescriptor3" extends="xworker.javafx.scene.layout.Pane">
    <description><![CDATA[<p>TextFlow is special layout designed to lay out rich text. It can be used to layout several&nbsp;Text&nbsp;nodes in a single text flow. The TextFlow uses the text and the font of each&nbsp;Text&nbsp;node inside of it plus it own width and text alignment to determine the location for each child. A single&nbsp;Text&nbsp;node can span over several lines due to wrapping and the visual location of&nbsp;Text&nbsp;node can differ from the logical location due to bidi reordering.</p>
]]></description>
    <actions>
        <JavaAction name="create" outerClassName="xworker.javafx.scene.text.TextFlowActions"
             methodName="create"></JavaAction>
    </actions>
    <attribute name="name"></attribute>
    <attribute name="label"></attribute>
    <attribute name="lineSpacing">
        <description><![CDATA[<p>Defines the vertical space in pixel between lines.</p>
]]></description>
    </attribute>
    <attribute name="textAlignment" extends="xworker.javafx.scene.text.TextAlignment/@Values"
         inputtype="select"></attribute>
    <attribute name="description" inputtype="html"></attribute>
    <VariablesDescs descriptors="xworker.lang.MetaThing/@VariablesDesc">
        <Variable name="var" varName="_thingName_" className="javafx.scene.text.TextFlow"></Variable>
    </VariablesDescs>
</thing>