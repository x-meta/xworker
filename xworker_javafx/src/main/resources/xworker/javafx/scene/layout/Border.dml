<?xml version="1.0" encoding="utf-8"?>

<thing name="Border" descriptors="xworker.lang.MetaDescriptor3">
    <description><![CDATA[<p>The Border of a&nbsp;Region. A Border is an immutable object which encapsulates the entire set of data required to render the border of a Region. Because this class is immutable, you can freely reuse the same Border on many different Regions. Please refer to&nbsp;JavaFX CSS Reference&nbsp;for a complete description of the CSS rules for styling the border of a Region.</p>
]]></description>
    <actions name="actions"></actions>
    <attribute name="name"></attribute>
    <attribute name="label"></attribute>
    <attribute name="description" inputtype="html"></attribute>
    <thing name="BorderImage">
        <actions name="actions"></actions>
        <attribute name="name"></attribute>
        <attribute name="label"></attribute>
        <attribute name="image">
            <description><![CDATA[<p>The image to use. This must not be null.</p>
]]></description>
        </attribute>
        <attribute name="widths">
            <description><![CDATA[<p>The widths of the border in each dimension. A null value results in Insets.EMPTY.</p>
]]></description>
        </attribute>
        <attribute name="insets">
            <description><![CDATA[<p>The insets at which to place the border relative to the region. A null value results in Insets.EMPTY</p>
]]></description>
        </attribute>
        <attribute name="slices" modifier="">
            <description><![CDATA[<p>The slices for the image. If null, defaults to BorderImageSlices.DEFAULT</p>
]]></description>
        </attribute>
        <attribute name="repeatX" inputtype="select" default="STRETCH">
            <description><![CDATA[<p>The repeat value for the border image in the x direction. If null, defaults to STRETCH.</p>
]]></description>
            <value name="REPEAT" value="REPEAT"></value>
            <value name="ROUND" value="ROUND"></value>
            <value name="SPACE" value="SPACE"></value>
            <value name="STRETCH" value="STRETCH"></value>
        </attribute>
        <attribute name="repeatY" extends="xworker.javafx.scene.layout.Border/@BorderImage/@repeatX"
             inputtype="select" default="STRETCH">
            <description><![CDATA[<p>The repeat value for the border image in the y direction. If null, defaults to the same value as repeatX.</p>
]]></description>
        </attribute>
        <attribute name="description" inputtype="html"></attribute>
    </thing>
</thing>