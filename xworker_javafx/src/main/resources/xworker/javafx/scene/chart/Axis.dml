<?xml version="1.0" encoding="utf-8"?>

<thing name="Axis" descriptors="xworker.lang.MetaDescriptor3" extends="xworker.javafx.layout.Region">
    <description><![CDATA[<p>Base class for all axes in JavaFX that represents an axis drawn on a chart area. It holds properties for axis auto ranging, ticks and labels along the axis.</p>
]]></description>
    <actions>
        <GetString name="getLabel" _xmeta_id_="22149" descriptors="xworker.lang.actions.ActionUtil/@GetString"
             attributeName="label" usage="params"></GetString>
        <GetObject name="getTickLabelFill" _xmeta_id_="22150" descriptors="xworker.lang.actions.ActionUtil/@GetData"
             attributeName="tickLabelFill" usage="params"></GetObject>
        <GetObject name="getTickLabelFont" _xmeta_id_="22151" descriptors="xworker.lang.actions.ActionUtil/@GetData"
             attributeName="tickLabelFont" usage="params"></GetObject>
    </actions>
    <attribute name="animated" inputtype="truefalseselect" group="Axis">
        <description><![CDATA[<p>When true any changes to the axis and its range will be animated.</p>
]]></description>
    </attribute>
    <attribute name="autoRanging" inputtype="truefalseselect" group="Axis">
        <description><![CDATA[<p>This is true when the axis determines its range from the data automatically</p>
]]></description>
    </attribute>
    <attribute name="label" size="50" group="Axis">
        <description><![CDATA[<p>The axis label</p>
]]></description>
    </attribute>
    <attribute name="side" extends="xworker.javafx.geometry.Side/@Value" inputtype="select"
         group="Axis">
        <description><![CDATA[<p>The side of the plot which this axis is being drawn on</p>
]]></description>
    </attribute>
    <attribute name="tickLabelFill" size="40" group="Axis">
        <description><![CDATA[<p>The fill for all tick labels</p>
]]></description>
    </attribute>
    <attribute name="tickLabelFont" size="40" group="Axis">
        <description><![CDATA[<p>The font for all tick labels</p>
]]></description>
    </attribute>
    <attribute name="tickLabelGap" group="Axis">
        <description><![CDATA[<p>The gap between tick labels and the tick mark lines</p>
]]></description>
    </attribute>
    <attribute name="tickLabelRotation" group="Axis">
        <description><![CDATA[<p>Rotation in degrees of tick mark labels from their normal horizontal.</p>
]]></description>
    </attribute>
    <attribute name="tickLabelsVisible" inputtype="truefalseselect" group="Axis">
        <description><![CDATA[<p>true if tick mark labels should be displayed</p>
]]></description>
    </attribute>
    <attribute name="tickLength" group="Axis">
        <description><![CDATA[<p>The length of tick mark lines</p>
]]></description>
    </attribute>
    <attribute name="tickMarkVisible" inputtype="truefalseselect" group="Axis">
        <description><![CDATA[<p>true if tick marks should be displayed</p>
]]></description>
    </attribute>
    <thing name="TickLabelFill" extends="xworker.javafx.scene.paint.Paints">
        <description><![CDATA[<p>The fill for all tick labels</p>
]]></description>
        <actions>
            <JavaAction name="create" outerClassName="xworker.javafx.scene.chart.AxisActions"
                 methodName="createTickLabelFill"></JavaAction>
        </actions>
        <attribute name="name"></attribute>
        <attribute name="label"></attribute>
        <attribute name="description" inputtype="html"></attribute>
    </thing>
    <thing name="TickLabelFont" extends="xworker.javafx.scene.text.Font">
        <description><![CDATA[<p>The font for all tick labels</p>
]]></description>
        <actions>
            <JavaAction name="create" outerClassName="xworker.javafx.scene.chart.AxisActions"
                 methodName="createTickLabelFont"></JavaAction>
        </actions>
    </thing>
</thing>