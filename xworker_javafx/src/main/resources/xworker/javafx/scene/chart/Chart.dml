<?xml version="1.0" encoding="utf-8"?>

<thing name="Chart" descriptors="xworker.lang.MetaDescriptor3" extends="xworker.javafx.layout.Region">
    <description><![CDATA[<p>Base class for all charts. It has 3 parts the title, legend and chartContent. The chart content is populated by the specific subclass of Chart.</p>
]]></description>
    <actions>
        <GetString name="getTitle" _xmeta_id_="18356" descriptors="xworker.lang.actions.ActionUtil/@GetString"
             attributeName="title" usage="params"></GetString>
    </actions>
    <attribute name="animated" inputtype="truefalseselect" group="Chart">
        <description><![CDATA[<p>When true any data changes will be animated.</p>
]]></description>
    </attribute>
    <attribute name="legendSide" extends="xworker.javafx.geometry.Side/@Value" inputtype="select"
         group="Chart">
        <description><![CDATA[<p>The side of the chart where the legend should be displayed</p>
]]></description>
    </attribute>
    <attribute name="legendVisible" inputtype="truefalseselect" group="Chart">
        <description><![CDATA[<p>When true the chart will display a legend if the chart implementation supports a legend.</p>
]]></description>
    </attribute>
    <attribute name="title" size="50" group="Chart">
        <description><![CDATA[<p>The chart title</p>
]]></description>
    </attribute>
    <attribute name="titleSide" extends="xworker.javafx.geometry.Side/@Value" inputtype="select"
         group="Chart">
        <description><![CDATA[<p>The side of the chart where the title is displayed</p>
]]></description>
    </attribute>
</thing>