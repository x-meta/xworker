<?xml version="1.0" encoding="utf-8"?>

<thing name="BarChart" descriptors="xworker.lang.MetaDescriptor3" extends="xworker.javafx.scene.chart.XYChart">
    <description><![CDATA[<p>A chart that plots bars indicating data values for a category. The bars can be vertical or horizontal depending on which axis is a category axis.</p>
]]></description>
    <actions>
        <JavaAction name="create" outerClassName="xworker.javafx.scene.chart.BarChartActions"
             methodName="create"></JavaAction>
    </actions>
    <attribute name="name"></attribute>
    <attribute name="label"></attribute>
    <attribute name="barGap">
        <description><![CDATA[<p>The gap to leave between bars in the same category</p>
]]></description>
    </attribute>
    <attribute name="categoryGap">
        <description><![CDATA[<p>The gap to leave between bars in separate categories</p>
]]></description>
    </attribute>
    <attribute name="title" size="50">
        <description><![CDATA[<p>The chart title</p>
]]></description>
    </attribute>
    <attribute name="description" inputtype="html"></attribute>
</thing>