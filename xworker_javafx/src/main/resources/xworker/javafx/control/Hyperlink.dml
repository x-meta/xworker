<?xml version="1.0" encoding="utf-8"?>

<thing name="Hyperlink" descriptors="xworker.lang.MetaDescriptor3" extends="xworker.javafx.control.ButtonBase"
     icon="/com/oracle/javafx/scenebuilder/kit/editor/images/nodeicons/Hyperlink.png">
    <description><![CDATA[<p>An HTML like label which can be a graphic and/or text which responds to rollovers and clicks. When a hyperlink is clicked/pressed&nbsp;isVisited()&nbsp;becomes&nbsp;true. A Hyperlink behaves just like a&nbsp;Button. When a hyperlink is pressed and released a&nbsp;ActionEvent&nbsp;is sent, and your application can perform some action based on this event.</p>
]]></description>
    <actions>
        <JavaAction name="create" outerClassName="xworker.javafx.control.HyperlinkActions"
             methodName="create"></JavaAction>
    </actions>
    <attribute name="name"></attribute>
    <attribute name="label"></attribute>
    <attribute name="visited" inputtype="truefalseselect">
        <description><![CDATA[<p>Indicates whether this link has already been &quot;visited&quot;.</p>
]]></description>
    </attribute>
    <attribute name="text" size="60">
        <description><![CDATA[<p>The text to display in the label.</p>
]]></description>
    </attribute>
    <attribute name="description" inputtype="html"></attribute>
    <VariablesDescs descriptors="xworker.lang.MetaThing/@VariablesDesc">
        <Variable name="var" varName="_thingName_" className="javafx.scene.control.Hyperlink"></Variable>
    </VariablesDescs>
</thing>