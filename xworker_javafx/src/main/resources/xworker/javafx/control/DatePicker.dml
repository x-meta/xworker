<?xml version="1.0" encoding="utf-8"?>

<thing name="DatePicker" descriptors="xworker.lang.MetaDescriptor3" extends="xworker.javafx.control.ComboBoxBase">
    <description><![CDATA[<p>The DatePicker control allows the user to enter a date as text or to select a date from a calendar popup. The calendar is based on either the standard ISO-8601 chronology or any of the other chronology classes defined in the java.time.chrono package.</p>
]]></description>
    <actions>
        <JavaAction name="create" outerClassName="xworker.javafx.control.DatePickerActions"
             methodName="create"></JavaAction>
    </actions>
    <attribute name="name"></attribute>
    <attribute name="label"></attribute>
    <attribute name="chronology" inputtype="select">
        <description><![CDATA[<p>The calendar system used for parsing, displaying, and choosing dates in the DatePicker control.</p>
]]></description>
        <value name="HijrahChronology" value="HijrahChronology"></value>
        <value name="IsoChronology" value="IsoChronology"></value>
        <value name="JapaneseChronology" value="JapaneseChronology"></value>
        <value name="MinguoChronology" value="MinguoChronology"></value>
        <value name="ThaiBuddhistChronology" value="ThaiBuddhistChronology"></value>
    </attribute>
    <attribute name="showWeekNumbers" inputtype="truefalseselect">
        <description><![CDATA[<p>Whether the DatePicker popup should display a column showing week numbers.</p>
]]></description>
    </attribute>
    <attribute name="description" inputtype="html"></attribute>
    <VariablesDescs descriptors="xworker.lang.MetaThing/@VariablesDesc">
        <Variable name="var" varName="_thingName_" className="javafx.scene.control.DatePicker"></Variable>
    </VariablesDescs>
</thing>