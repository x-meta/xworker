<?xml version="1.0" encoding="utf-8"?>

<thing name="ScrollBar" descriptors="xworker.lang.MetaDescriptor3" extends="xworker.javafx.control.Control">
    <description><![CDATA[<p>Either a horizontal or vertical bar with increment and decrement buttons and a &quot;thumb&quot; with which the user can interact. Typically not used alone but used for building up more complicated controls such as the ScrollPane and ListView.</p>
]]></description>
    <actions>
        <JavaAction name="create" outerClassName="xworker.javafx.control.ScrollBarActions"
             methodName="create"></JavaAction>
    </actions>
    <attribute name="name"></attribute>
    <attribute name="label"></attribute>
    <attribute name="blockIncrement" group="Region">
        <description><![CDATA[<p>The amount by which to adjust the scrollbar if the track of the bar is clicked.</p>
]]></description>
    </attribute>
    <attribute name="max" group="Region">
        <description><![CDATA[<p>The maximum value represented by this ScrollBar.</p>
]]></description>
    </attribute>
    <attribute name="min" group="Region">
        <description><![CDATA[<p>The minimum value represented by this ScrollBar.</p>
]]></description>
    </attribute>
    <attribute name="orientation" inputtype="select" group="Region">
        <description><![CDATA[<p>The orientation of the ScrollBar can either be HORIZONTAL or VERTICAL.</p>
]]></description>
        <value name="HORIZONTAL" value="HORIZONTAL"></value>
        <value name="VERTICAL" value="VERTICAL"></value>
    </attribute>
    <attribute name="unitIncrement" group="Region">
        <description><![CDATA[<p>The amount by which to adjust the ScrollBar when the increment or decrement methods are called.</p>
]]></description>
    </attribute>
    <attribute name="value" group="Region">
        <description><![CDATA[<p>The current value represented by this ScrollBar.</p>
]]></description>
    </attribute>
    <attribute name="visibleAmount" group="Region">
        <description><![CDATA[<p>Visible amount of the scrollbar's range, typically represented by the size of the scroll bar's thumb.</p>
]]></description>
    </attribute>
    <attribute name="description" inputtype="html"></attribute>
</thing>