<?xml version="1.0" encoding="utf-8"?>

<thing name="Tooltip" descriptors="xworker.lang.MetaDescriptor3" extends="xworker.javafx.control.PopupControl"
     icon="/com/oracle/javafx/scenebuilder/kit/editor/images/nodeicons/Tooltip.png">
    <description><![CDATA[<p>Tooltips are common UI elements which are typically used for showing additional information about a Node in the scenegraph when the Node is hovered over by the mouse. Any Node can show a tooltip. In most cases a Tooltip is created and its&nbsp;text&nbsp;property is modified to show plain text to the user. However, a Tooltip is able to show within it an arbitrary scenegraph of nodes - this is done by creating the scenegraph and setting it inside the Tooltip&nbsp;graphic&nbsp;property.</p>
]]></description>
    <actions>
        <JavaAction name="create" outerClassName="xworker.javafx.control.TooltipActions" methodName="create"></JavaAction>
    </actions>
    <attribute name="name"></attribute>
    <attribute name="label"></attribute>
    <attribute name="contentDisplay" extends="xworker.javafx.control.ContentDisplay/@Value"
         inputtype="select">
        <description><![CDATA[<p>Specifies the positioning of the graphic relative to the text.</p>
]]></description>
    </attribute>
    <attribute name="font">
        <description><![CDATA[<p>The default font to use for text in the Tooltip.</p>
]]></description>
    </attribute>
    <attribute name="graphic">
        <description><![CDATA[<p>An optional icon for the Tooltip.</p>
]]></description>
    </attribute>
    <attribute name="graphicTextGap">
        <description><![CDATA[<p>The amount of space between the graphic and text</p>
]]></description>
    </attribute>
    <attribute name="textAlignment" extends="xworker.javafx.scene.text.TextAlignment/@Values"
         inputtype="select">
        <description><![CDATA[<p>Specifies the behavior for lines of text when text is multiline.</p>
]]></description>
    </attribute>
    <attribute name="textOverrun" extends="xworker.javafx.control.OverrunStyle/@Value" inputtype="select">
        <description><![CDATA[<p>Specifies the behavior to use if the text of the Tooltip exceeds the available space for rendering the text.</p>
]]></description>
    </attribute>
    <attribute name="text">
        <description><![CDATA[<p>The text to display in the tooltip.</p>
]]></description>
    </attribute>
    <attribute name="wrapText" inputtype="truefalseselect">
        <description><![CDATA[<p>If a run of text exceeds the width of the Tooltip, then this variable indicates whether the text should wrap onto another line.</p>
]]></description>
    </attribute>
    <attribute name="description" inputtype="html"></attribute>
    <VariablesDescs descriptors="xworker.lang.MetaThing/@VariablesDesc">
        <Variable name="var" varName="_thingName_" className="javafx.scene.control.Tooltip"></Variable>
    </VariablesDescs>
    <thing name="Font" extends="xworker.javafx.scene.text.Font" inheritDescription="true"></thing>
    <thing name="Graphic" extends="xworker.javafx.control.Graphic"></thing>
</thing>