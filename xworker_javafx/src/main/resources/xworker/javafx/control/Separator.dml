<?xml version="1.0" encoding="utf-8"?>

<thing name="Separator" descriptors="xworker.lang.MetaDescriptor3" extends="xworker.javafx.control.Control">
    <description><![CDATA[<p>A horizontal or vertical separator line. The visual appearance of this separator can be controlled via CSS. A horizontal separator occupies the full horizontal space allocated to it (less padding), and a vertical separator occupies the full vertical space allocated to it (less padding). The&nbsp;halignment&nbsp;and&nbsp;valignment&nbsp;properties determine how the separator is positioned in the other dimension, for example, how a horizontal separator is positioned vertically within its allocated space.</p>
]]></description>
    <actions>
        <JavaAction name="create" outerClassName="xworker.javafx.control.SeparatorActions"
             methodName="create"></JavaAction>
    </actions>
    <attribute name="name"></attribute>
    <attribute name="label"></attribute>
    <attribute name="halignment" inputtype="select">
        <description><![CDATA[<p>For vertical separators, specifies the horizontal position of the separator line within the separator control&#39;s space.</p>
]]></description>
        <value name="CENTER" value="CENTER"></value>
        <value name="LEFT" value="LEFT"></value>
        <value name="RIGHT" value="RIGHT"></value>
    </attribute>
    <attribute name="orientation">
        <description><![CDATA[<p>The orientation of the&nbsp;Separator&nbsp;can either be horizontal or vertical.</p>
]]></description>
        <value name="HORIZONTAL" value="HORIZONTAL"></value>
        <value name="VERTICAL" value="VERTICAL"></value>
    </attribute>
    <attribute name="valignment">
        <description><![CDATA[<p>For horizontal separators, specifies the vertical alignment of the separator line within the separator control&#39;s space.</p>
]]></description>
        <value name="BASELINE" value="BASELINE"></value>
        <value name="BOTTOM" value="BOTTOM"></value>
        <value name="CENTER" value="CENTER"></value>
        <value name="TOP" value="TOP"></value>
    </attribute>
    <attribute name="description" inputtype="html"></attribute>
</thing>