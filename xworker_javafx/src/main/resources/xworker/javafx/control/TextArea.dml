<?xml version="1.0" encoding="utf-8"?>

<thing name="TextArea" descriptors="xworker.lang.MetaDescriptor3" extends="xworker.javafx.control.TextInputControl">
    <description><![CDATA[<p>Text input component that allows a user to enter multiple lines of plain text. Unlike in previous releases of JavaFX, support for single line input is not available as part of the TextArea control, however this is the sole-purpose of the&nbsp;TextField&nbsp;control. Additionally, if you want a form of rich-text editing, there is also the&nbsp;HTMLEditor&nbsp;control.</p>
]]></description>
    <actions>
        <JavaAction name="create" outerClassName="xworker.javafx.control.TextAreaActions"
             methodName="create"></JavaAction>
    </actions>
    <attribute name="name"></attribute>
    <attribute name="label"></attribute>
    <attribute name="prefColumnCount">
        <description><![CDATA[<p>The preferred number of text columns.</p>
]]></description>
    </attribute>
    <attribute name="prefRowCount">
        <description><![CDATA[<p>The preferred number of text rows.</p>
]]></description>
    </attribute>
    <attribute name="scrollLeft">
        <description><![CDATA[<p>The number of pixels by which the content is horizontally scrolled.</p>
]]></description>
    </attribute>
    <attribute name="scrollTop">
        <description><![CDATA[<p>The number of pixels by which the content is vertically scrolled.</p>
]]></description>
    </attribute>
    <attribute name="wrapText" inputtype="truefalseselect">
        <description><![CDATA[<p>If a run of text exceeds the width of the TextArea, then this variable indicates whether the text should wrap onto another line.</p>
]]></description>
    </attribute>
    <attribute name="text" inputtype="textarea">
        <description><![CDATA[<p>The textual content of this TextInputControl.</p>
]]></description>
    </attribute>
    <attribute name="description" inputtype="html"></attribute>
    <VariablesDescs descriptors="xworker.lang.MetaThing/@VariablesDesc">
        <Variable name="var" varName="_thingName_" className="javafx.scene.control.TextArea"></Variable>
    </VariablesDescs>
</thing>