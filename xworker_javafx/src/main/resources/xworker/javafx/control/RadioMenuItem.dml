<?xml version="1.0" encoding="utf-8"?>

<thing name="RadioMenuItem" descriptors="xworker.lang.MetaDescriptor3" extends="xworker.javafx.control.MenuItem">
    <description><![CDATA[<p>A RadioMenuItem is a&nbsp;MenuItem&nbsp;that can be toggled (it uses the&nbsp;Toggle&nbsp;mixin). This means that RadioMenuItem has an API very similar in nature to other controls that use&nbsp;Toggle, such as&nbsp;RadioButton&nbsp;and&nbsp;ToggleButton. RadioMenuItem is specifically designed for use within a&nbsp;Menu, so refer to that class API documentation for more information on how to add a RadioMenuItem into it.</p>
]]></description>
    <actions>
        <JavaAction name="create" outerClassName="xworker.javafx.control.RadioMenuItemActions"
             methodName="create"></JavaAction>
    </actions>
    <attribute name="name"></attribute>
    <attribute name="label"></attribute>
    <attribute name="selected" inputtype="truefalseselect">
        <description><![CDATA[<p>The selected state for this&nbsp;Toggle.</p>
]]></description>
    </attribute>
    <attribute name="toggleGroup" inputtype="openWindow" size="50" inputattrs="xworker.swt.xworker.attributeEditor.openWins.SelectThingOpenWindow/@shell|prefix=var%3A,descriptor=xworker.javafx.control.ToggleGroup,seperator=%2C,returnType=name,append=false">
        <description><![CDATA[<p>Represents the&nbsp;ToggleGroup&nbsp;that this RadioMenuItem belongs to.</p>
]]></description>
    </attribute>
    <attribute name="text" size="50">
        <description><![CDATA[<p>The text to display in the MenuItem.</p>
]]></description>
    </attribute>
    <attribute name="description" inputtype="html"></attribute>
    <VariablesDescs descriptors="xworker.lang.MetaThing/@VariablesDesc">
        <Variable name="var" varName="_thingName_" className="javafx.scene.control.RadioMenuItem"></Variable>
    </VariablesDescs>
</thing>