<?xml version="1.0" encoding="utf-8"?>

<thing name="Slider" descriptors="xworker.lang.MetaDescriptor3" extends="xworker.javafx.control.Control">
    <description><![CDATA[<p>The Slider Control is used to display a continuous or discrete range of valid numeric choices and allows the user to interact with the control. It is typically represented visually as having a &quot;track&quot; and a &quot;knob&quot; or &quot;thumb&quot; which is dragged within the track. The Slider can optionally show tick marks and labels indicating the different slider position values.</p>
]]></description>
    <actions>
        <JavaAction name="create" outerClassName="xworker.javafx.control.SliderActions" methodName="create"></JavaAction>
    </actions>
    <attribute name="name"></attribute>
    <attribute name="label"></attribute>
    <attribute name="blockIncrement">
        <description><![CDATA[<p>The amount by which to adjust the slider if the track of the slider is clicked.</p>
]]></description>
    </attribute>
    <attribute name="labelFormatter">
        <description><![CDATA[<p>A function for formatting the label for a major tick.</p>
]]></description>
    </attribute>
    <attribute name="majorTickUnit">
        <description><![CDATA[<p>The unit distance between major tick marks.</p>
]]></description>
    </attribute>
    <attribute name="max">
        <description><![CDATA[<p>The maximum value represented by this Slider.</p>
]]></description>
    </attribute>
    <attribute name="minorTickCount">
        <description><![CDATA[<p>The number of minor ticks to place between any two major ticks.</p>
]]></description>
    </attribute>
    <attribute name="min">
        <description><![CDATA[<p>The minimum value represented by this Slider.</p>
]]></description>
    </attribute>
    <attribute name="orientation" inputtype="select">
        <description><![CDATA[<p>The orientation of the Slider can either be horizontal or vertical.</p>
]]></description>
        <value name="HORIZONTAL" value="HORIZONTAL"></value>
        <value name="VERTICAL" value="VERTICAL"></value>
    </attribute>
    <attribute name="showTickLabels" inputtype="truefalseselect">
        <description><![CDATA[<p>Indicates that the labels for tick marks should be shown.</p>
]]></description>
    </attribute>
    <attribute name="showTickMarks" inputtype="truefalseselect">
        <description><![CDATA[<p>Specifies whether the Skin implementation should show tick marks.</p>
]]></description>
    </attribute>
    <attribute name="snapToTicks" inputtype="truefalseselect">
        <description><![CDATA[<p>Indicates whether the value of the Slider should always be aligned with the tick marks.</p>
]]></description>
    </attribute>
    <attribute name="valueChanging" inputtype="truefalseselect">
        <description><![CDATA[<p>When true, indicates the current value of this Slider is changing.</p>
]]></description>
    </attribute>
    <attribute name="value">
        <description><![CDATA[<p>The current value represented by this Slider.</p>
]]></description>
    </attribute>
    <attribute name="description" inputtype="html"></attribute>
    <VariablesDescs descriptors="xworker.lang.MetaThing/@VariablesDesc">
        <Variable name="var" varName="_thingName_" className="javafx.scene.control.Slider"></Variable>
    </VariablesDescs>
</thing>