<?xml version="1.0" encoding="utf-8"?>

<thing name="CustomMenuItem" descriptors="xworker.lang.MetaDescriptor3" extends="xworker.javafx.control.MenuItem">
    <description><![CDATA[<p>A&nbsp;MenuItem&nbsp;that allows for arbitrary nodes to be embedded within it, by assigning a&nbsp;Node&nbsp;to the&nbsp;content&nbsp;property. CustomMenuItem attempts to make arbitrary nodes appear more natural in the Menu. For example, you automatically get hover highlighting when the user hovers their mouse over the node (or navigates to it using keyboard or other alternate means).</p>
]]></description>
    <actions>
        <JavaAction name="create" outerClassName="xworker.javafx.control.CustomMenuItemActions"
             methodName="create"></JavaAction>
    </actions>
    <attribute name="name"></attribute>
    <attribute name="label"></attribute>
    <attribute name="content">
        <description><![CDATA[<p>The node to display within this CustomMenuItem.</p>
]]></description>
    </attribute>
    <attribute name="hideOnClick" inputtype="truefalseselect">
        <description><![CDATA[<p>If true, this menu item, and all visible menus, will be hidden when this menu item is clicked on.</p>
]]></description>
    </attribute>
    <attribute name="description" inputtype="html"></attribute>
    <VariablesDescs descriptors="xworker.lang.MetaThing/@VariablesDesc">
        <Variable name="var" varName="_thingName_" className="javafx.scene.control.CustomMenuItem"></Variable>
    </VariablesDescs>
    <thing name="Content" extends="xworker.javafx.scene.Nodes">
        <actions>
            <JavaAction name="create" outerClassName="xworker.javafx.control.CustomMenuItemActions"
                 methodName="createContent"></JavaAction>
        </actions>
        <attribute name="name"></attribute>
        <attribute name="label"></attribute>
        <attribute name="description" inputtype="html"></attribute>
    </thing>
    <attribute name="text" size="50" group="MenuItem">
        <description><![CDATA[<p>The text to display in the MenuItem.</p>
]]></description>
    </attribute>
</thing>