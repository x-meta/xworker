<thing name="ChoiceBox" descriptors="xworker.lang.MetaDescriptor3" extends="xworker.javafx.control.Control">
    <description><![CDATA[<p>The ChoiceBox is used for presenting the user with a relatively small set of predefined choices from which they may choose. The ChoiceBox, when &quot;showing&quot;, will display to the user these choices and allow them to pick exactly one choice. When not showing, the current choice is displayed.</p>
]]></description>
    <actions>
        <JavaAction name="create" outerClassName="xworker.javafx.control.ChoiceBoxActions"
             methodName="create"></JavaAction>
        <GetObject name="getConverter" descriptors="xworker.lang.actions.ActionUtil/@GetData"
             attributeName="converter"></GetObject>
        <GetObject name="getItems" descriptors="xworker.lang.actions.ActionUtil/@GetData"
             attributeName="items"></GetObject>
        <GetObject name="getValue" descriptors="xworker.lang.actions.ActionUtil/@GetData"
             attributeName="value"></GetObject>
        <GetStringList name="getStringValues" descriptors="xworker.lang.actions.ActionUtil/@GetStringList"
             attributeName="stringValues"></GetStringList>
    </actions>
    <attribute name="name"></attribute>
    <attribute name="label"></attribute>
    <attribute name="converter">
        <description><![CDATA[<p>Allows a way to specify how to represent objects in the items list.</p>
]]></description>
    </attribute>
    <attribute name="items" size="50">
        <description><![CDATA[<p>The items to display in the choice box.</p>

<p>接受Iterable&lt;Object&gt;类型。</p>
]]></description>
    </attribute>
    <attribute name="value" size="50">
        <description><![CDATA[<p>The value of this ChoiceBox is defined as the selected item in the ChoiceBox selection model.</p>
]]></description>
    </attribute>
    <attribute name="stringValues" inputtype="textarea"></attribute>
    <attribute name="description" inputtype="html"></attribute>
    <thing name="ThingItems">
        <actions>
            <JavaAction name="create" outerClassName="xworker.javafx.control.ChoiceBoxActions"
                 methodName="createThingItems"></JavaAction>
        </actions>
        <attribute name="name"></attribute>
        <attribute name="label"></attribute>
        <attribute name="description" inputtype="html"></attribute>
        <thing name="Item">
            <actions>
                <GetObject name="getValue" _xmeta_id_="39803" descriptors="xworker.lang.actions.ActionUtil/@GetData"
                     attributeName="value" usage="params"></GetObject>
            </actions>
            <attribute name="name"></attribute>
            <attribute name="label"></attribute>
            <attribute name="value" inputtype="textarea"></attribute>
            <attribute name="description" inputtype="html"></attribute>
        </thing>
    </thing>
    <VariablesDescs descriptors="xworker.lang.MetaThing/@VariablesDesc">
        <Variable name="var" varName="_thingName_" className="javafx.scene.control.ChoiceBox"></Variable>
    </VariablesDescs>
