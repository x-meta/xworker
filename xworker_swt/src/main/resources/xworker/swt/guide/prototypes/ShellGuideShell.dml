<?xml version="1.0" encoding="utf-8"?>

<Shell name="shell" descriptors="xworker.swt.widgets.Shell" text="Shell Guide" NO_TRIM="true"
     ON_TOP="true" alpha="80" label="ShellGuideShell" background="#808080">
    <RowLayout name="RowLayout"></RowLayout>
    <Listeners>
        <Listener type="MouseDown">
            <KeySwitch descriptors="xworker.swt.actions.EventActions/@KeySwitch">
                <Case Shift="true">
                    <actions>
                        <GroovyAction name="doEvent" code="guide.getTipShell().setVisible(true);"></GroovyAction>
                    </actions>
                </Case>
            </KeySwitch>
        </Listener>
    </Listeners>
</Shell>