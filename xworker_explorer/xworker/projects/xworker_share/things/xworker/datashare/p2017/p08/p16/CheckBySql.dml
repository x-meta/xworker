#$@text#$@
import groovy.sql.Sql;

def self = self;
def actionContext = actionContext;
def sqlStr = self.doAction("getSql", actionContext);
def sql = new Sql(con);
def msg = null;
def rowCount = 0;
try{
    sql.eachRow(sqlStr, {
        rowCount++;
        def r = self.doAction("doCheck", actionContext, "it", it);
        if(r != null){
            if(msg != null){
                msg = msg + "</br>" + r;
            }else{
               msg = r;
            }
        }
    });
}catch(Exception e){
    return e.getMessage();
}

if(rowCount == 0){
    return self.doAction("getNoResultMessage", actionContext);
}else{
    return msg;
}
