#$@text#$@
import org.xmeta.ActionContext;
import org.xmeta.Bindings;

//创建变量上下文
ActionContext ac = new ActionContext();

//保存变量
ac.put("x", 1);
ac.put("y", 2);

//使用变量
printVar(ac); //x=1,y=2,x+y=3

//栈操作, push
Bindings bindings = ac.push();
bindings.put("x", 3);
bindings.put("y", 4);
printVar(ac); //x=3,y=4,x+y=7

//栈操作, pop
ac.pop();
printVar(ac); //x=1,y=2,x+y=3

def printVar(ac){
    println "x=" + ac.get("x") + ",y=" + ac.get("y") + ",x+y=" + (ac.x + ac.y);
}
